<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.Timba"
                 xmlns:ffimageloading="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms">
    <ContentPage.Content>
        <!--ANNA-->
        <Grid>
            <ffimageloading:SvgCachedImage Source="Timba.gif" Aspect="Fill" />
            <AbsoluteLayout>
                <Label FontSize="Header"
         HorizontalTextAlignment="Center"
         Text="T"
         TextColor="Red"
         HeightRequest="150"
         WidthRequest="150"
         AbsoluteLayout.LayoutBounds="400, 180">
                    <Label.GestureRecognizers>
                        <DragGestureRecognizer />
                    </Label.GestureRecognizers>
                </Label>

                <Label FontSize="Header"
         HorizontalTextAlignment="Center"
         Text="t"
         TextColor="Red"
         HeightRequest="150"
         WidthRequest="150"
         AbsoluteLayout.LayoutBounds="500, 180">
                    <Label.GestureRecognizers>
                        <DragGestureRecognizer />
                    </Label.GestureRecognizers>
                </Label>



                <Label FontSize="Header"
         AbsoluteLayout.LayoutBounds="450, 10"
         HorizontalTextAlignment="Center"
         Text="imba"
         TextColor="White"
         HeightRequest="150"
         WidthRequest="300"
         >
                    <Label.GestureRecognizers>
                        <DropGestureRecognizer Drop="OnDrop" />
                    </Label.GestureRecognizers>
                </Label>

                <Label FontSize="Header"
         HorizontalTextAlignment="Center"
         Text="T"
         TextColor="White"
         HeightRequest="300"
         WidthRequest="150"
         AbsoluteLayout.LayoutBounds="400, 10">
                    <Label.GestureRecognizers>
                        <DropGestureRecognizer Drop="OnDrop" />
                    </Label.GestureRecognizers>
                </Label>

            </AbsoluteLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>