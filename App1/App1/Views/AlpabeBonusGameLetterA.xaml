<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms" xmlns:forms="clr-namespace:Lottie.Forms;assembly=Lottie.Forms"
             x:Class="App1.Views.AlpabeBonusGameLetterA"
             BackgroundColor="DodgerBlue"
             
Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <AbsoluteLayout >

            <forms:AnimationView
                 x:Name="animationViewribbon"
                Animation="City.json"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds=".5,.5"
                HorizontalOptions="Start"
                VerticalOptions="Start" 
                HeightRequest="800"
                WidthRequest="2000"
                AnimationSource="AssetOrBundle"
                RepeatCount="100"
                RepeatMode="Restart"
                AutoPlay="True"
                    />


            <forms:AnimationView
                 x:Name="BubbleSmall"
                Animation="bubble.json"
                 AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds="0, .1"
                HorizontalOptions="Start"
                VerticalOptions="Start" 
                HeightRequest="200"
                WidthRequest="300"
                AnimationSource="AssetOrBundle"
                AutoPlay="False"
           
                    />
            <forms:AnimationView
                 x:Name="BubbleSmall1"
                Animation="bubble.json"
                 AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds=".3, .7"
                HorizontalOptions="Start"
                VerticalOptions="Start" 
                HeightRequest="200"
                WidthRequest="300"
                AnimationSource="AssetOrBundle"
                AutoPlay="False"
                    />
            <forms:AnimationView
                 x:Name="BubbleSmall2"
                Animation="bubble.json"
                 AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds=".6, .1"
                HorizontalOptions="Start"
                VerticalOptions="Start" 
                HeightRequest="200"
                WidthRequest="300"
                AnimationSource="AssetOrBundle"
                AutoPlay="False"
               
                    />
            <forms:AnimationView
                 x:Name="BubbleSmall3"
                Animation="bubble.json"
                 AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds=".9, .1"
                HorizontalOptions="Start"
                VerticalOptions="Start" 
                HeightRequest="200"
                WidthRequest="300"
                AnimationSource="AssetOrBundle"
                AutoPlay="False"
              
                    />

            <Image 
                ClassId="Atis"
         x:Name="Atis"
         Source="A41.png"
         HeightRequest="120"
         WidthRequest="150"
         AbsoluteLayout.LayoutFlags="PositionProportional"
         AbsoluteLayout.LayoutBounds="0, .7">
                <Image.GestureRecognizers>
                    <DragGestureRecognizer DropCompleted="AtisShakeClicked" />
                </Image.GestureRecognizers>
            </Image>
            <Image 
                ClassId="A1"
                x:Name="A1"
         Source="A42.png"
         HeightRequest="120"
         WidthRequest="150"
         AbsoluteLayout.LayoutFlags="PositionProportional"
         AbsoluteLayout.LayoutBounds="0, .1">
                <Image.GestureRecognizers>
                    <DragGestureRecognizer DropCompleted="Correct1" />
                </Image.GestureRecognizers>
            </Image>
            <Image 
                ClassId="snake"
                  x:Name="snake"
         Source="A43.png"
         HeightRequest="100"
         WidthRequest="150"
         AbsoluteLayout.LayoutFlags="PositionProportional"
         AbsoluteLayout.LayoutBounds=".3, .1">
                <Image.GestureRecognizers>
                    <DragGestureRecognizer DropCompleted="SnakeShakeClicked" />
                </Image.GestureRecognizers>
            </Image>
            <Image 
                ClassId="A2"
                 x:Name="A2"
         Source="A44.png"
         HeightRequest="100"
         WidthRequest="150"
         AbsoluteLayout.LayoutFlags="PositionProportional"
         AbsoluteLayout.LayoutBounds=".3, .7">
                <Image.GestureRecognizers>
                    <DragGestureRecognizer  DropCompleted="Correct2" />
                </Image.GestureRecognizers>
            </Image>
            <Image 
                ClassId="A3"
                 x:Name="A3"
         Source="A45.png"
         HeightRequest="100"
         WidthRequest="150"
         AbsoluteLayout.LayoutFlags="PositionProportional"
         AbsoluteLayout.LayoutBounds=".6, .1">
                <Image.GestureRecognizers>
                    <DragGestureRecognizer  DropCompleted="Correct3" />
                </Image.GestureRecognizers>
            </Image>
            <Image 
                 ClassId="Sun"
                 x:Name="Sun"
                Opacity="1"
         Source="A46.png"
         HeightRequest="100"
         WidthRequest="150"
         AbsoluteLayout.LayoutFlags="PositionProportional"
         AbsoluteLayout.LayoutBounds=".6, .7">
                <Image.GestureRecognizers>
                    <DragGestureRecognizer DropCompleted="SunShakeClicked" />
                </Image.GestureRecognizers>
            </Image>
            <Image 
                ClassId="A4"
                 x:Name="A4"
         Source="A47.png"
         HeightRequest="100"
         WidthRequest="150"
         AbsoluteLayout.LayoutFlags="PositionProportional"
         AbsoluteLayout.LayoutBounds=".9, .1">
                <Image.GestureRecognizers>
                    <DragGestureRecognizer  DropCompleted="Correct4" />
                </Image.GestureRecognizers>
            </Image>
            <Image 
                ClassId="Eagle"
                 x:Name="Eagle"
         Source="A48.png"
                Opacity="1"
         HeightRequest="100"
         WidthRequest="150"
         AbsoluteLayout.LayoutFlags="PositionProportional"
         AbsoluteLayout.LayoutBounds=".9, .7">
                <Image.GestureRecognizers>
                    <DragGestureRecognizer DropCompleted="EagleShakeClicked"  />
                </Image.GestureRecognizers>
            </Image>


            <Label x:Name="lblVal"
                ClassId="Eagle"
               Text="0"
                Opacity="0"
         HeightRequest="100"
         WidthRequest="150"
         AbsoluteLayout.LayoutFlags="PositionProportional"
         AbsoluteLayout.LayoutBounds=".5, .5">
              
            </Label>



        



            <Image 
                Source="A49.png"
         Opacity="0"       
         HeightRequest="100"
         WidthRequest="200"
         AbsoluteLayout.LayoutFlags="PositionProportional"
         AbsoluteLayout.LayoutBounds=".5, 1">
                <Image.GestureRecognizers>
                    <DropGestureRecognizer />
                </Image.GestureRecognizers>
            </Image>

            <forms:AnimationView
                x:Name="Basket"
                Animation="Basket.json"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds=".5, 1"
                HorizontalOptions="Start"
                VerticalOptions="Start" 
                HeightRequest="150"
                WidthRequest="150"
                AnimationSource="AssetOrBundle"
                RepeatCount="100"
                RepeatMode="Restart"
                AutoPlay="True"
                Clicked="Btn_Back"
                    />


            <forms:AnimationView
                x:Name="HomeBTN"
                Animation="HomeBTN.json"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds="0,0"
                HorizontalOptions="Start"
                VerticalOptions="Start" 
                HeightRequest="100"
                WidthRequest="100"
                AnimationSource="AssetOrBundle"
                RepeatCount="100"
                RepeatMode="Restart"
                AutoPlay="True"
                Clicked="Btn_Back"
                    />

            <!--<Label Text="GIF" TextColor="DodgerBlue" FontSize="40" />-->
            <!--<ffimageloading:SvgCachedImage HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Source="NewBG.gif" HeightRequest="100" WidthRequest="100" />-->
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>